			<to-view-id>/restricted/cambiarPassword.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/restricted/cambiarPassword.xhtml</from-view-id>

			<to-view-id>/restricted/modificarDatosPerfil.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/restricted/modificarDatosPerfil.xhtml</from-view-id>
